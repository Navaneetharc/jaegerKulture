        <section class="content-main">
            <div class="content-header">
                <div>
                    <h2 class="content-title card-title">Products List</h2>
                    
                </div>
                <div>
                    
                          <a href="/admin/addProducts" class="btn btn-primary btn-sm rounded">Create new</a>
                          <br><br>
                          <form action="#" method="GET" class="d-flex">
                            <input type="text" name="search" placeholder="Search Categories" class="form-control bg-white" value="">
                            <button type="submit" class="btn btn-primary ms-2">Search</button>
                        </form>
                </div>
            </div>
            <div class="card mb-4">
                <header class="card-header">
                    
                </header> <!-- card-header end// -->
                <div class="card-body">
                    <article class="itemlist">
                       
                        <div class="row align-items-center">

                            <table>
                                <thead>
                                    <tr>
                                        <th>Product Name</th>
                                        <th>Category</th>
                                        <th>Sale Price</th>
                                        <!-- <th>Stock</th> -->
                                        <th>Date</th>
                                        <th>Action</th>                                      
                                        <th>Edit</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <% for(let i = data.length - 1; i >= 0; i--) { %>
                                    <tr>
                                        <td><%= data[i].productName %></td>
                                        <td><%= data[i].category.name %></td>
                                        <td><%= data[i].salePrice %></td>
                                        <!-- <td><%= data[i].productName %></td> -->
                                        
                                        <td><%= new Date(data[i].createdAt).toISOString().split('T')[0] %></td>
                                        <td class="text-start">
                                            <%if(data[i].isBlocked===false){%>
                                                <a href="/admin/blockProduct/<%=data[i]._id%>" class="btn btn-danger" style="width: 100px; text-decoration: none; color: white;">
                                                    Block
                                                </a>
                                            <%}else{%>
                                                <a href="/admin/unblockProduct/<%=data[i]._id%>" class="btn btn-success" style="width: 100px; text-decoration: none; color: white;">
                                                    Unblock
                                                </a>
                                            <%}%>
                                        </td>
                                        <td><a class="dropdown-item" href="/admin/editProduct/<%=data[i]._id%>">Edit info</a></td>
                                    </tr>
                                    <% } %>
                                </tbody>
                            </table>
                            
                            
                        </div>
                        
                        <!-- row .// -->
                    </article> <!-- itemlist  .// -->
                    
                </div> <!-- card-body end// -->
            </div> <!-- card end// -->
            
            <div class="pagination-area mt-15 mb-50">
                <nav aria-label="Page navigation example">
                    <ul class="pagination justify-content-start">
                        <% for(let i = 1; i <= totalPages; i++) { %>
                            <li class="page-item <%= currentPage === i ? 'active' : '' %>">
                                <a class="page-link" href="/admin/products/<%= i %>"><%= i.toString().padStart(2, '0') %></a>
                            </li>
                        <% } %>
                        <% if (currentPage < totalPages) { %>
                            <li class="page-item">
                                <a class="page-link" href="/admin/products/<%= currentPage + 1 %>">
                                    <i class="material-icons md-chevron_right"></i>
                                </a>
                            </li>
                        <% } %>
                    </ul>
                </nav>
