    <style>
        .steps {
  position: relative;
  display: flex;
  justify-content: space-between;
  margin-bottom: 2rem;
}

/* grey full line */
.steps::before {
  content: "";
  position: absolute;
  top: 1.25rem;    /* halfway down your step-icon-wrap */
  left: 0;
  width: 100%;
  height: 2px;
  background: #e0e0e0;
  z-index: 0;
}

/* green partial line */
.steps::after {
  content: "";
  position: absolute;
  top: 1.25rem;
  left: 0;
  width: var(--completed-percent, 0%);
  height: 2px;
  background: #28a745;
  z-index: 1;
}

.step {
  position: relative;
  text-align: center;
  width: 25%;       /* assuming 4 steps; adjust if you add more */
  z-index: 2;
}
.step-icon-wrap {
  margin-bottom: 0.5rem;
}
.step-icon {
  width: 2.5rem;
  height: 2.5rem;
  border-radius: 50%;
  background: #e0e0e0;
  display: flex;
  align-items: center;
  justify-content: center;
  margin: 0 auto;
  font-size: 1.25rem;
  color: #fff;
}
.step.completed .step-icon {
  background: #28a745;
}
.step-title {
  font-weight: 600;
  margin-bottom: 0.25rem;
}
.step.completed .step-title,
.step.completed .text-sm {
  color: #000;
}
.step .text-sm {
  color: #888;
}

    </style>

