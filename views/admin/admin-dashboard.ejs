                                <div class="col-md-4">
                                    <div class="summary-card p-3 border rounded">
                                        <h6 class="text-muted mb-2">Total Sales</h6>
                                        <h3 id="totalSales" class="text-success mb-2"><%= dashboardData.grossSales %></h3>
                                        <p class="mb-0 text-muted"><span class="badge bg-success text-white">+12.5%</span> from last period</p>
                                    </div>
                                </div>
                                <div class="col-md-4">
                                    <div class="summary-card p-3 border rounded">
                                        <h6 class="text-muted mb-2">Total Orders</h6>
                                        <h3 id="totalOrders" class="mb-2"><%= dashboardData.totalOrders %></h3>
                                        <p class="mb-0 text-muted"><span class="badge bg-success text-white">+8.3%</span> from last period</p>
                                    </div>
                                </div>
                                <div class="col-md-4">
                                    <div class="summary-card p-3 border rounded">
                                        <h6 class="text-muted mb-2">Total Discounts</h6>
                                        <h3 id="totalDiscounts" class="text-danger mb-2"><%= dashboardData.totalDiscount %></h3>
                                        <p class="mb-0 text-muted"><span class="badge bg-secondary text-white">7.9%</span> of gross sales</p>
                                    </div>
                                </div>
                            </div>
                        </article>
                    </div>

                    <div class="card mb-4">
                        <article class="card-body">
                            <h5 class="card-title mb-4">Recent Sales Activities</h5>
                            <ul class="list-group list-group-flush" id="recentActivities">
                                <% dashboardData.recentActivities.forEach(activity => { %>
                                    <li class="list-group-item border-0 d-flex align-items-center px-0 py-3">
                                        <div class="me-3">
                                            <span class="icon icon-sm rounded-circle bg-light">
                                                <i class="material-icons text-primary md-play_circle_outline"></i>
                                            </span>
                                        </div>
                                        <div class="d-flex flex-grow-1 justify-content-between align-items-center">
                                            <div>
                                                <h6 class="mb-0"><%= activity.date %></h6>
                                                <p class="mb-0 text-muted"><strong><%= activity.amount %></strong> <%= activity.description %></p>
                                            </div>
                                            <i class="material-icons text-primary md-trending_flat"></i>
                                        </div>
                                    </li>
                                <% }); %>
                            </ul>
                        </article>
                    </div>
                </div>

                <div class="col-xl-4 col-lg-12">
                    <div class="card mb-4">
                        <article class="card-body">
                            <h5 class="card-title mb-4">Revenue by Region</h5>
                            <div style="height: 250px;">
                                <canvas id="myChart2"></canvas>
                            </div>
                        </article>
                    </div>

                    <div class="card mb-4">
                        <article class="card-body">
                            <h5 class="card-title mb-4">Discount & Coupons Report</h5>
                            <div class="mb-4">
                                <h6 class="mb-3">Top Performing Coupon Codes</h6>
                                <% dashboardData.topCoupons.forEach((coupon, index) => { %>
                                    <div class="mb-3">
                                        <div class="d-flex justify-content-between mb-1">
                                            <span><%= coupon.name %></span>
                                            <span class="text-success">$<%= coupon.totalDiscount %></span>
                                        </div>
                                        <div class="progress" style="height: 10px;">
                                            <div class="progress-bar bg-success" role="progressbar" 
                                                style="width: <%= dashboardData.totalDiscount ? (coupon.totalDiscount / dashboardData.totalDiscount * 100).toFixed(0) : 0 %>%" 
                                                id="coupon<%= index + 1 %>" aria-valuenow="<%= dashboardData.totalDiscount ? (coupon.totalDiscount / dashboardData.totalDiscount * 100).toFixed(0) : 0 %>" 
                                                aria-valuemin="0" aria-valuemax="100"></div>
                                        </div>
                                    </div>
                                <% }); %>
                            </div>
                            <div>
                                <h6 class="mb-3">Discount Impact</h6>
                                <div class="d-flex justify-content-between mb-2">
                                    <span>Gross Sales</span>
                                    <span id="grossSales" class="fw-bold"><%= dashboardData.grossSales %></span>
                                </div>
                                <div class="d-flex justify-content-between mb-2">
                                    <span>Coupon Discounts</span>
                                    <span class="text-danger" id="couponDiscounts"><%= dashboardData.totalDiscount %></span>
                                </div>
                                <div class="d-flex justify-content-between mb-2">
                                    <span>Promotional Discounts</span>
                                    <span class="text-danger" id="promoDiscounts">$0</span>
                                </div>
                                <hr>
                                <div class="d-flex justify-content-between">
                                    <span class="fw-bold">Net Sales</span>
                                    <span class="fw-bold text-success" id="netSales"><%= dashboardData.netSales %></span>
                                </div>
                            </div>
                        </article>
                    </div>

                    
                </div>
            </div>
        </section>

