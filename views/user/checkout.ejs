<script>


    // Grab them all
  const cards = document.querySelectorAll('.address-card');

cards.forEach(card => {
  card.addEventListener('click', () => {
    // ‚úÖ Deselect every card & uncheck its radio
    cards.forEach(c => {
      c.classList.remove('selected');
      c.querySelector('input[type="radio"]').checked = false;
    });

    // üåü Select the clicked one
    card.classList.add('selected');
    card.querySelector('input[type="radio"]').checked = true;
  });
});



    // Grab all the payment-method blocks
    const methods = document.querySelectorAll('.payment-method');
  
    methods.forEach(method => {
      method.addEventListener('click', () => {
        // 1Ô∏è‚É£ Deselect all
        methods.forEach(m => {
          m.classList.remove('selected');
          m.querySelector('input[type="radio"]').checked = false;
        });
  
        // 2Ô∏è‚É£ Select the clicked one
        method.classList.add('selected');
        method.querySelector('input[type="radio"]').checked = true;
      });
    });


    // default

    // Add this to your client-side JS file
document.querySelectorAll('.set-default').forEach(link => {
  link.addEventListener('click', function(e) {
    e.preventDefault();
    const addressId = this.dataset.id;
    
    // Create a form to submit
    const form = document.createElement('form');
    form.method = 'POST';
    form.action = `/addresses/${addressId}/default`;
    document.body.appendChild(form);
    form.submit();
  });
});


// place order

document.addEventListener("DOMContentLoaded",()=>{

    const form = document.querySelector('form');

    form.addEventListener('submit', async function (e) {
        e.preventDefault(); 

    try {
            const res = await fetch('/checkout', {
                method: 'POST',
                body: new FormData(form)
            });

            const data = await res.json();

            Swal.fire({
                icon: res.ok ? "success" : "error",
                text: data.message || data.error || (res.ok ? "Order placed successfully!" : "Failed to place order"),
                timer: 1500,
                showConfirmButton: false
            });

            if (res.ok) {
                setTimeout(() => {
                    window.location.href = "/order-success"; // change if your route is different
                }, 1500); // wait for Swal to finish
            }

        } catch (err) {
            Swal.fire({
                icon: "error",
                text: "An error occurred while placing the order.",
                timer: 1500,
                showConfirmButton: false
            });
        }
    });    
})
  </script>
  

