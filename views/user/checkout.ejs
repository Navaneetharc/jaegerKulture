/* default */

.default-badge {
  background-color: #4caf50;
  color: white;
  padding: 2px 8px;
  font-size: 12px;
  border-radius: 12px;
  margin-left: 8px;
  display: inline-block;
  vertical-align: middle;
}

.set-default {
  margin-left: 10px;
  color: #007bff;
  cursor: pointer;
}

.selected {
  border: 2px solid #4caf50;
  box-shadow: 0 0 5px rgba(76, 175, 80, 0.5);
}


</style>

