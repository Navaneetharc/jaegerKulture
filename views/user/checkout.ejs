<main class="main">
    <div class="page-header breadcrumb-wrap">
        <div class="container">
            <div class="breadcrumb">
                <a href="/" rel="nofollow">Home</a>
                <span></span> <a href="/cart">Cart</a>
                <span></span> Checkout
            </div>
        </div>
    </div>

    <section class="mt-50 mb-50">
    <div class="container">
        <form action="/checkout" class="form" id="checkoutForm" method="POST">
            <div class="row">
                <div class="col-lg-8">
                    <!-- Shipping Address Section -->
                    <div class="checkout-section">
                        <div class="card">
                            <div class="card-header">
                                <h4>Shipping Address</h4>
                            </div>
                            <div class="card-body">
                                <div class="address-list">
                                  <% addresses.forEach((addr) => { %>
                                    <div
                                      class="address-card <%= addr.isDefault ? 'selected' : '' %>"
                                      data-id="<%= addr._id %>"
                                    >
                                      <!-- hidden radio to capture selection -->
                                      <input
                                        type="radio"
                                        name="selectedAddress"
                                        value="<%= addr._id %>"
                                        hidden
                                        <%= addr.isDefault ? 'checked' : '' %>
                                      />
                                      
                                      <div class="address-name">
                                        <%= addr.name %>
                                        <% if (addr.isDefault) { %>
                                          <span class="default-badge">Default</span>
                                        <% } %>
                                      </div>
                                      <div class="address-details">
                                        <%= addr.addressLine1 %><br/>
                                        <% if (addr.addressLine2) { %>
                                          <%= addr.addressLine2 %><br/>
                                        <% } %>
                                        <%= addr.city %>, <%= addr.state %> <%= addr.pincode %><br/>
                                        <p>Phone: <%= addr.phone %></p>
                                        <% if (addr.altPhone) { %>
                                          <p>Alt Phone: <%= addr.altPhone %></p>
                                        <% } %>
                                      </div>
                                      <div class="address-actions">
                                        <a href="/addresses/<%= addr._id %>/edit"><i class="fi-rs-edit"></i> Edit</a>
                                        <% if (!addr.isDefault) { %>
                                          <a href="#" class="set-default" data-id="<%= addr._id %>">Set as Default</a>
                                        <% } %>
                                      </div>
                                    </div>
                                  <% }) %>
                                  
                                  <div class="add-address-btn">
                                    <a href="/addAddresses"><i class="fi-rs-plus"></i> Add New Address</a>
                                  </div>
                                </div>
                              </div>
                        </div>
                    </div>
                    
                    <!-- Order Items Section -->
                    <div class="checkout-section">
                        <div class="card">
                            <div class="card-header">
                                <h4>Order Items</h4>
                            </div>
                            <div class="card-body">
                                <div class="checkout-products">
                                    
                                    <!-- Product 2 -->
                                    <% items.forEach(item => { %>
                                    <div class="checkout-product">
                                        <img src="/uploads/product-images/<%= item.productImage %>" alt="Product" class="checkout-product-image">
                                        <div class="checkout-product-details">
                                            <div class="checkout-product-name"><%= item.name %></div>
                                            <div class="checkout-product-price">‚Çπ<%= item.price%></div>
                                        </div>
                                        <div class="checkout-product-quantity">quantity: <%= item.quantity %></div>
                                        <div class="checkout-product-total">‚Çπ<%= (item.price * item.quantity)%></div>
                                    </div>
                                    <% }) %>
                                </div>
                            </div>
                        </div>
                    </div>
                    
                    <!-- Payment Methods Section -->
                    <div class="checkout-section">
                        <div class="card">
                            <div class="card-header">
                                <h4>Payment Method</h4>
                            </div>
                            <div class="card-body">
                                <div class="payment-methods">
                                    <!-- Credit Card -->
                                    <div class="payment-method">
                                        <div class="payment-method-icon">
                                            <i class="fi-rs-credit-card" style="font-size: 24px; color: #3BB77E;"></i>
                                        </div>
                                        <div class="payment-method-details">
                                            <div class="payment-method-name">Credit/Debit Card</div>
                                            <div class="payment-method-description">Pay securely with your credit or debit card</div>
                                        </div>
                                        <div class="payment-method-radio">
                                            <input type="radio" name="payment" >
                                        </div>
                                    </div>
                                    
                                    <!-- UPI -->
                                    <div class="payment-method">
                                        <div class="payment-method-icon">
                                            <img src="https://1.bp.blogspot.com/-mn0etM0nf_c/X943Bn_y0kI/AAAAAAAAOkM/E2RhIJW0TbgzABXbKruLqpzpCfIuyN5JQCLcBGAsYHQ/s808/Picture1.png" alt="UPI">
                                        </div>
                                        <div class="payment-method-details">
                                            <div class="payment-method-name">UPI</div>
                                            <div class="payment-method-description">Pay using UPI apps like Google Pay, PhonePe, etc.</div>
                                        </div>
                                        <div class="payment-method-radio">
                                            <input type="radio" name="payment">
                                        </div>
                                    </div>
                                    
                                    <!-- Razorpay -->
                                    <div class="payment-method">
                                        <div class="payment-method-icon">
                                            <img src="https://www.yourtechstory.com/wp-content/uploads/2020/01/razorpay.png" alt="Razorpay">
                                        </div>
                                        <div class="payment-method-details">
                                            <div class="payment-method-name">Razorpay</div>
                                            <div class="payment-method-description">Pay securely with Razorpay</div>
                                        </div>
                                        <div class="payment-method-radio">
                                            <input type="radio" name="payment">
                                        </div>
                                    </div>
                                    
                                    <!-- PayPal -->
                                    <div class="payment-method">
                                        <div class="payment-method-icon">
                                            <img src="https://static.vecteezy.com/system/resources/previews/020/190/502/original/paypal-logo-paypal-logo-free-free-vector.jpg" alt="PayPal">
                                        </div>
                                        <div class="payment-method-details">
                                            <div class="payment-method-name">PayPal</div>
                                            <div class="payment-method-description">Pay securely with PayPal</div>
                                        </div>
                                        <div class="payment-method-radio">
                                            <input type="radio" name="payment">
                                        </div>
                                    </div>
                                    
                                    <!-- Cash on Delivery -->
                                    <div class="payment-method selected">
                                        <div class="payment-method-icon">
                                            <i class="fi-rs-money" style="font-size: 24px; color: #3BB77E;"></i>
                                        </div>
                                        <div class="payment-method-details">
                                            <div class="payment-method-name">Cash on Delivery</div>
                                            <div class="payment-method-description">Pay with cash upon delivery</div>
                                        </div>
                                        <div class="payment-method-radio">
                                            <input type="radio" name="payment" checked>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                
                <% if (items.length > 0) { %>
                    <% const subtotal = items.reduce((sum, i) => sum + i.price * i.quantity, 0); %>
                    <% const shipping = 41; %>
                    <% const tax = subtotal * 0.05; %>
                    <% const total = subtotal + shipping + tax; %>
                
                    <div class="col-lg-4">
                        <div class="card">
                            <div class="card-body checkout-summary">
                                <div class="checkout-summary-title">Order Summary</div>
                                <div class="checkout-summary-row">
                                    <div class="checkout-summary-label">Subtotal</div>
                                    <div class="checkout-summary-value subtotal">‚Çπ<%= subtotal.toFixed(2) %></div>
                                </div>
                                <div class="checkout-summary-row">
                                    <div class="checkout-summary-label">Shipping</div>
                                    <div class="checkout-summary-value shipping">‚Çπ<%= shipping.toFixed(2) %></div>
                                </div>
                                <div class="checkout-summary-row">
                                    <div class="checkout-summary-label">Tax (5%)</div>
                                    <div class="checkout-summary-value tax">‚Çπ<%= tax.toFixed(2) %></div>
                                </div>
                                <div class="checkout-summary-row">
