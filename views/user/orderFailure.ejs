<%- include('../partials/userL/header.ejs') %>

<style>
    .order-failure-container {
        text-align: center;
        padding: 3rem 0;
    }
    
    .failure-icon {
        color: #e53935;
        font-size: 5rem;
        margin-bottom: 1.5rem;
    }
    
    .error-message {
        background-color: #ffebee;
        display: inline-block;
        padding: 0.5rem 1rem;
        border-radius: 4px;
        font-weight: 600;
        margin: 1rem 0;
        color: #c62828;
        border-left: 4px solid #e53935;
    }
    
    .error-details {
        margin: 1.5rem 0;
        padding: 1rem;
        background-color: #f8f9fa;
        border-radius: 8px;
        max-width: 600px;
        margin-left: auto;
        margin-right: auto;
    }
    
    .error-details h5 {
        margin-bottom: 1rem;
        color: #333;
    }
    
    .error-details ul {
        text-align: left;
        margin: 0;
        padding-left: 1.5rem;
    }
    
    .error-details li {
        margin-bottom: 0.5rem;
        color: #666;
    }
    
    .action-buttons {
        margin-top: 2rem;
    }
    
    .action-btn {
        display: inline-block;
        padding: 0.75rem 1.5rem;
        border-radius: 4px;
        font-weight: 500;
        text-decoration: none;
        margin: 0 0.5rem;
        transition: all 0.3s ease;
        border: none;
        cursor: pointer;
    }
    
    .primary-btn {
        background-color: #3BB77E;
        color: white;
    }
    
    .primary-btn:hover {
        background-color: #2f9b6a;
        color: white;
    }
    
    .retry-btn {
        background-color: #ff6b35;
        color: white;
    }
    
    .retry-btn:hover {
        background-color: #e55a2b;
        color: white;
    }
    
    .secondary-btn {
        background-color: #f8f9fa;
        color: #333;
        border: 1px solid #dee2e6;
    }
    
    .secondary-btn:hover {
        background-color: #e9ecef;
    }
    
    @media (max-width: 767.98px) {
        .action-buttons {
            display: flex;
            flex-direction: column;
        }
        
        .action-btn {
            margin: 0.5rem 0;
        }
    }
</style>

<main class="main">
    <div class="page-header breadcrumb-wrap">
        <div class="container">
            <div class="breadcrumb">
                <a href="/" rel="nofollow">Home</a>
                <span></span> <a href="/cart">Cart</a>
                <span></span> <a href="/checkout">Checkout</a>
                <span></span> Order Failed
            </div>
        </div>
    </div>

    <section class="mt-50 mb-50">
        <div class="container">
            <div class="order-failure-container">
                <div class="failure-icon">
                    <i class="fi-rs-cross-circle"></i>
                </div>
                <h2>Order Processing Failed</h2>
                <p>We're sorry, but there was an issue processing your order.</p>
                <div class="error-message">
                    Payment could not be processed
                </div>
                
                <div class="error-details">
                    <h5>What happened?</h5>
                    <ul>
                        <li>Payment authorization failed</li>
                        <li>Insufficient funds or card declined</li>
                        <li>Technical issue with payment gateway</li>
                        <li>Network connection problem</li>
                    </ul>
                </div>
                
                <div class="action-buttons">
                    <button onclick="retryPayment()" class="action-btn retry-btn">Retry Payment</button>
                    <a href="/cart" class="action-btn secondary-btn">Back to Cart</a>
                    <a href="/shop" class="action-btn secondary-btn">Continue Shopping</a>
                </div>
            </div>
        </div>
    </section>
</main>

<script>
    function retryPayment() {
        // Redirect back to checkout page
        window.location.href = '/checkout';
    }
</script>