        display: flex;
        justify-content: space-between;
        align-items: center;
        padding: 1rem;
        border-bottom: 1px solid #dee2e6;
    }

    .transaction-title {
        font-weight: 600;
        font-size: 1rem;
        margin: 0;
        display: flex;
        align-items: center;
    }

    .transaction-title i {
        margin-right: 10px;
        font-size: 20px;
    }

    .transaction-body {
        padding: 1rem;
    }

    .transaction-amount {
        font-weight: 600;
        font-size: 1.2rem;
    }

    .transaction-amount.credit {
        color: #3BB77E;
    }

    .transaction-amount.debit {
        color: #dc3545;
    }

    .transaction-date {
        color: #6c757d;
        font-size: 0.9rem;
    }

    .transaction-details {
        margin-top: 10px;
        font-size: 0.95rem;
    }

    .transaction-filter {
        margin-bottom: 20px;
