        border: 1px solid #dee2e6;
        border-radius: 8px;
        margin-bottom: 1rem;
        transition: all 0.3s ease;
    }

    .transaction-card:hover {
        box-shadow: 0 0.25rem 0.5rem rgba(0, 0, 0, 0.05);
    }

