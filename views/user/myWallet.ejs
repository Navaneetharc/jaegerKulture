<script>
    document.addEventListener('DOMContentLoaded', function() {
    // Modal handling for Add Money
    const modalBackdrop = document.getElementById('modalBackdrop');
    const addMoneyModal = document.getElementById('addMoneyModal');
    const addMoneyBtn = document.getElementById('addMoneyBtn');
    const closeAddMoneyModal = document.getElementById('closeAddMoneyModal');
    const cancelAddMoney = document.getElementById('cancelAddMoney');
    const confirmAddMoney = document.getElementById('confirmAddMoney');

    // Modal handling for Withdraw
    const withdrawModal = document.getElementById('withdrawModal');
    const withdrawBtn = document.getElementById('withdrawBtn');
    const closeWithdrawModal = document.getElementById('closeWithdrawModal');
    const cancelWithdraw = document.getElementById('cancelWithdraw');
    const confirmWithdraw = document.getElementById('confirmWithdraw');

    // Filter buttons
    const filterButtons = document.querySelectorAll('.filter-btn');
    const transactionCards = document.querySelectorAll('.transaction-card');

    // Add Money Modal Functions
    if (addMoneyBtn) {
        addMoneyBtn.addEventListener('click', function() {
            modalBackdrop.style.display = 'block';
            addMoneyModal.style.display = 'block';
        });
    }

    function closeAddModal() {
        modalBackdrop.style.display = 'none';
        addMoneyModal.style.display = 'none';
    }

    if (closeAddMoneyModal) closeAddMoneyModal.addEventListener('click', closeAddModal);
    if (cancelAddMoney) cancelAddMoney.addEventListener('click', closeAddModal);
    if (confirmAddMoney) {
        confirmAddMoney.addEventListener('click', function() {
            // Add money logic would go here
            alert('Money added successfully!');
            closeAddModal();
        });
    }

    // Withdraw Modal Functions
    if (withdrawBtn) {
        withdrawBtn.addEventListener('click', function() {
            modalBackdrop.style.display = 'block';
            withdrawModal.style.display = 'block';
        });
    }

    function closeWithdrawModalFunc() {
        modalBackdrop.style.display = 'none';
        withdrawModal.style.display = 'none';
    }

    if (closeWithdrawModal) closeWithdrawModal.addEventListener('click', closeWithdrawModalFunc);
    if (cancelWithdraw) cancelWithdraw.addEventListener('click', closeWithdrawModalFunc);
    if (confirmWithdraw) {
        confirmWithdraw.addEventListener('click', function() {
            // Withdraw money logic would go here
            alert('Withdrawal request submitted successfully!');
            closeWithdrawModalFunc();
        });
    }

    // Transaction filtering functionality
    filterButtons.forEach(button => {
        button.addEventListener('click', function() {
            // Remove active class from all buttons
            filterButtons.forEach(btn => {
                btn.classList.remove('active');
            });
            
            // Add active class to clicked button
            this.classList.add('active');
            
            // Get the filter category from the button text
            const filterCategory = this.textContent.trim().toLowerCase();
            
            // Filter transactions based on category
            transactionCards.forEach(card => {
                const transactionTitle = card.querySelector('.transaction-title').textContent.trim().toLowerCase();
                const transactionAmount = card.querySelector('.transaction-amount').textContent.trim();
                const transactionDetails = card.querySelector('.transaction-details')?.textContent.trim().toLowerCase() || '';
                
                // Determine if this card should be shown based on filter
                let shouldShow = false;
                
                if (filterCategory === 'all') {
                    shouldShow = true;
                } else if (filterCategory === 'added' && 
                          (transactionTitle.includes('money added') || 
                           transactionTitle.includes('add money'))) {
                    shouldShow = true;
                } else if (filterCategory === 'spent' && 
                          (transactionTitle.includes('order payment') || 
                           transactionTitle.includes('payment'))) {
                    shouldShow = true;
                } else if (filterCategory === 'refunded' && 
                          (transactionTitle.includes('refund'))) {
                    shouldShow = true;
                } else if (filterCategory === 'referrals' && 
                          (transactionTitle.includes('referral') || 
                           transactionDetails.includes('referr'))) {
                    shouldShow = true;
                }
                
                // Show or hide the card
                if (shouldShow) {
                    card.style.display = 'block';
                } else {
                    card.style.display = 'none';
                }
            });
            
            // Show message if no transactions for selected filter
            const visibleCards = Array.from(transactionCards).filter(card => 
                card.style.display !== 'none'
            );
            
            // Get or create the no-transactions message
            let noTransactionsMsg = document.getElementById('no-transactions-msg');
            if (!noTransactionsMsg) {
                noTransactionsMsg = document.createElement('p');
                noTransactionsMsg.id = 'no-transactions-msg';
                noTransactionsMsg.className = 'text-center my-4';
                transactionCards[0].parentNode.appendChild(noTransactionsMsg);
            }
            
            if (visibleCards.length === 0) {
                noTransactionsMsg.textContent = `No ${filterCategory === 'all' ? 'transaction' : filterCategory} history available.`;
                noTransactionsMsg.style.display = 'block';
            } else {
                noTransactionsMsg.style.display = 'none';
            }
        });
    });
    
    // Trigger click on "All" button to initialize the view
    document.querySelector('.filter-btn.active').click();
});
</script>

